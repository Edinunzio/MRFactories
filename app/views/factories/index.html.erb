<h1>Factories</h1>

<%= link_to 'Add a factory', new_factory_path %>

<% @factories.each do |factory| %>
    <div>
      <h3><%= factory.name %></h3>
      <p><%= factory.tags %></p>
      <p>
        <%= factory.city %>, <%= factory.state %> <%= factory.zipcode %>
      </p>
      <%= link_to 'Show', factory_path(factory) %>
      <%= link_to 'Edit', edit_factory_path(factory) %>
    </div>
<% end %>
